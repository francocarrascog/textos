
<h1>Posts</h1>
<br>
<% @posts.each do |post| %>
<div class="card" style="width: 100%;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.body %></p>
    <a href=""><%= link_to 'Show', post, class: "btn btn-warning" %></a>
  </div>
</div>
<br>
<% end %>
<br>
<%= link_to 'New Post', new_post_path, class: "btn btn-dark" %>