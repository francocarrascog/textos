<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to 'Home', root_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to 'Posts', posts_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to 'Tags',  tags_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to 'FAQs', posts_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to 'About', posts_path, class: "nav-link px-2 link-dark" %></li>
      </ul>

      <div class="col-md-3 text-end">
      <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-dark" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "btn btn-outline-dark me-2" %>
        <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-dark" %>
      <% end %>
      </div>
    </header>
</div>